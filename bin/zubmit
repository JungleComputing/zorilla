#!/bin/sh

if [ -z $JAVA_HOME ];  then
	echo please set JAVA_HOME to the location of your java installation
	exit
fi

if [ -z $ZORILLA_HOME ];  then
	echo please set ZORILLA_HOME to the location of your zorilla installation
	exit
fi

CLASSPATH=$ZORILLA_HOME

for i in $ZORILLA_HOME/zoni/lib/*.jar ; do CLASSPATH="$CLASSPATH:$i" ; done
for i in $ZORILLA_HOME/apps/lib/*.jar ; do CLASSPATH="$CLASSPATH:$i" ; done

D_GAT_PATH="-Dgat.adaptor.path=$ZORILLA_HOME/apps/external/GAT-adaptors"

exec $JAVA_HOME/bin/java -ea -cp $CLASSPATH $D_GAT_PATH nl.vu.zorilla.apps.Zubmit $@

