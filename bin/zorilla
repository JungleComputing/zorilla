#!/bin/sh

if [ -z $JAVA_HOME ];  then
	echo please set JAVA_HOME to the location of your java installation
	exit
fi

if [ -z $ZORILLA_HOME ];  then
	echo please set ZORILLA_HOME to the location of your zorilla installation
	exit
fi

CLASSPATH=""

for i in $ZORILLA_HOME/bamboo/lib/*.jar ; do CLASSPATH="$CLASSPATH:$i" ; done
for i in $ZORILLA_HOME/zoni/lib/*.jar ; do CLASSPATH="$CLASSPATH:$i" ; done
for i in $ZORILLA_HOME/node/lib/*.jar ; do CLASSPATH="$CLASSPATH:$i" ; done

D_LOG4J="-Dlog4j.configuration=file:$ZORILLA_HOME/log4j.properties"

D_ZORILLA_HOME="-Dzorilla.home=$ZORILLA_HOME"

exec $JAVA_HOME/bin/java -ea -cp $CLASSPATH $D_ZORILLA_HOME $D_LOG4J nl.vu.zorilla.Node $@

