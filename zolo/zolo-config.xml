<?xml version="1.0" encoding="ISO-8859-1" ?>
<zolo-config>
  <settings>
    <strategy-check-operator>OR</strategy-check-operator>
    <beep>true</beep>
  </settings>
  <strategies>
    <windows>
      <strategy>
        <name>NoUsersLoggedIn</name>
        <class>NoUsersLoggedInStrategy</class>
        <timer>30</timer>
        <active>true</active>
      </strategy>
      <strategy>
        <name>NoUserActivity</name>
        <class>NoUserActivityStrategy</class>
        <timer>5</timer>
        <user-idle-after>300</user-idle-after>
        <active>true</active>
      </strategy>
      <strategy>
        <name>TimeInterval</name>
        <class>TimeIntervalStrategy</class>
        <timer>60</timer>
        <intervals>
          <interval>
            <start-hour>19</start-hour>
            <start-minute>0</start-minute>
            <end-hour>23</end-hour>
            <end-minute>15</end-minute>
          </interval>
        </intervals>
        <active>true</active>
      </strategy>
    </windows>
    <linux>
      <strategy>
        <name>NoUsersLoggedIn</name>
        <class>NoUsersLoggedInStrategy</class>
        <timer>30</timer>
        <active>true</active>
      </strategy>
      <strategy>
        <name>TimeInterval</name>
        <class>TimeIntervalStrategy</class>
        <timer>60</timer>
        <intervals>
          <interval>
            <start-hour>19</start-hour>
            <start-minute>0</start-minute>
            <end-hour>23</end-hour>
            <end-minute>15</end-minute>
          </interval>
        </intervals>
        <active>true</active>
      </strategy>
    </linux>
  </strategies>
</zolo-config>
